<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tourists</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <%- include('header') %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <header class="header">Tourist Page</header>
        <a
          class="col-sm-3"
          style="
            text-decoration: none;
            font-weight: bold;
            padding-top: 10px;
            padding-left: 70px;
            position: absolute;
            right: 0;
          "
          href="/tourist/addTourist"
          ><i class="fa fa-plus-square px-2"></i>Add Tourist</a
        >
      </div>
      <div class="container-fluid py-3">
        <div class="row">
          <% if(tourists.length === 0){ %>
          <header class="header">
            No tourists yet! Click "Add Tourist" to start adding tourists!
          </header>
          <% } else %>
          <div class="row py-3">
            <% tourists.forEach((tourist) => { %>
            <div class="col-sm-2">
              <div class="card" style="width: 9rem" align="center">
                <img src="<%= tourist.photo %>" class="card-img-top" />
                <div class="card-body">
                  <h5 class="card-title"><%= tourist.name %></h5>
                  <a
                    href="/tourist/<%= tourist.id %>"
                    class="btn-primary px-2 py-1"
                    style="border-radius: 5px; text-decoration: none"
                  >
                    Choose
                  </a>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
