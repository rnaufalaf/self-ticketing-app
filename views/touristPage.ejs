<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tourist Page</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <%- include('header') %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <header class="header">Tourist Page</header>
        <a
          class="col-sm-3"
          style="
            text-decoration: none;
            font-weight: bold;
            padding-top: 10px;
            padding-left: 70px;
            position: absolute;
            right: 0;
          "
          href="/tourist/addTourist"
          ><i class="fa fa-plus-square px-2"></i>Add Tourist</a
        >
      </div>
      <h1>Choose Tourist</h1>
      <div class="container-fluid py-3">
        <div class="row">
          <% tourists.forEach((tourist) => { %>
          <div class="col-sm-3" style="padding: 5px">
            <div class="card" style="width: 18rem">
              <div class="row">
                <div class="col">
                  <img src="<%= tourist.photo %>" class="avatar" />
                </div>
                <div class="col" style="padding-top: 8px; padding-right: 50px">
                  <a
                    style="font-weight: bold; text-decoration: none"
                    href="/tourist/<%= tourist.id %>"
                  >
                    <%= tourist.name %>
                  </a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
