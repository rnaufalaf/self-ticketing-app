<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Destinations Page</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <%- include('header') %>
  </head>
  <body>
    <div class="row">
      <header class="header">List of Destinations</header>
      <a
        class="col-sm-3"
        style="
          text-decoration: none;
          font-weight: bold;
          padding-top: 10px;
          padding-left: 70px;
          position: absolute;
          right: 0;
        "
        href="/destination/addDestination"
        ><i class="fa fa-plus-square px-2"></i>Add Destination</a
      >
    </div>
    <div class="container py-3">
      <div class="row">
        <% destinations.forEach((destination) => { %>
        <div class="card col-sm-3" style="width: 18rem">
          <img src="<%= destination.image %>" class="card-img-top" alt="..." />
          <div class="card-body">
            <h5 class="card-title"><%= destination.name %></h5>
            <p style="font-weight: bold; color: rgb(18, 79, 148)">
              <%= destination.type %>
            </p>
            <div class="col">
              <a
                href="/destination/updateDestination/<%= destination.id %>"
                class="px-3"
                style="color: blue; font-weight: bold; text-decoration: none"
                >Edit</a
              >
              <a
                href="/destination/delete/<%= destination.id %>"
                class="px-3"
                style="color: red; font-weight: bold; text-decoration: none"
                >Delete</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
